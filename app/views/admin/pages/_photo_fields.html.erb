<div class="nested-fields">
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :image %>
  <%= f.file_field :image %>
  <!-- Render the image already uploaded -->
  <%= image_tag f.object.image, size: '80x80' %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= link_to_remove_association "Remove photo", f, class: 'test' %>
</div>
