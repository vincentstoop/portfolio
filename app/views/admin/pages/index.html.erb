<% provide(:title, @page_title) %>
<h1><%= @page_title %></h1>
<%= link_to "Add Page", new_admin_page_path %>
<% if @pages.any? %>
  <div class="pages">
    <ul>
      <%= render @pages %>
    </ul>
  </div>
<% end %>

<% if @portfolio_items.any? %>
  <div class="portfolio_items">
    <ul>
      <% @portfolio_items.each do |p| %>
        <%= render 'portfolio_item', portfolio_item: p %>
      <% end %>
    </ul>
  </div>
<% end %>
