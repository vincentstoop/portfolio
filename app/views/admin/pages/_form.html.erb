<% if @page.errors.any? %>
  <div class="errors">
    <ul>
      <% @page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for [:admin, @page] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :body %>
  <%= f.text_area :body %>

  <%= f.label :portfolio_item do %>
    <%= f.check_box :portfolio_item %>
    Portfolio Item
  <% end  %>

  <%= field_set_tag "Photos" do %>
    <%= f.fields_for :photos do |p| %>
      <%= p.label :title %>
      <%= p.text_field :title %>

      <%= p.label :image %>
      <%= p.file_field :image %>

      <%= p.label :description %>
      <%= p.text_area :description %>
    <% end %>
  <% end %>

  <%= render "admin/photos/list" %>

  <%= f.submit "Save" %>

<% end %>
